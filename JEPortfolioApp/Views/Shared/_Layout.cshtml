<!DOCTYPE html>
<html lang="en">
<style>

</style>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jonas English</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-cyborg.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JEPortfolioApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index"><text>Jonas English</text></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-evenly">
                            <li class="nav-item">
                                <a class="nav-link text-white" style="padding-left:50px; padding-right:50px; display: grid; grid-template-columns: min-content 1fr;" asp-area="" asp-controller="Home" asp-action="Index">
                                    <img src="~/images/home.png" style="height:auto; width:100%; float: left; margin-right: 25px"/>
                                    Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" style="padding-left:50px; padding-right:50px; display: grid; grid-template-columns: min-content 1fr;" asp-area="" asp-controller="Projects" asp-action="Index">
                                    <img src="~/images/simple-gears.svg" style="height:auto; width:100%; float: left; margin-right: 30px"/>
                                    Projects
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" style="padding-left:50px; padding-right:50px; display: grid; grid-template-columns: min-content 1fr;" href="https://github.com/jonasenglish">
                                    <img src="~/images/github_icon.png" style="height:auto; width:100%; float: left; margin-right: 25px"/>
                                    GitHub
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" style="padding-left:50px; padding-right:50px; display: grid; grid-template-columns: min-content 1fr;" href="https://www.linkedin.com/in/jonasenglish/">
                                    <img src="~/images/linkedIn_icon.png" style="height:auto; width:100%; float: left; margin-right: 20px"/>
                                    LinkedIn
                                </a>
                            </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-white-75" style="background-color:black">
        <div class="container">
            &copy; 2022 - Jonas English - This website hosts a few of my example projects and also serves to illustrate my skills using C#, Html, Css, ASP.net, and the MVC Framework.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
